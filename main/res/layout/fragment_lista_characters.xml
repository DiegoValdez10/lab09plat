<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_characterDetail"
    android:background="@color/white">


    <ImageView
        android:id="@+id/image_view_characterdeatil"
        android:layout_width="116dp"
        android:layout_height="110dp"
        android:layout_marginVertical="15dp"
        android:contentDescription="@string/Image_view_characterdeatail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/nombrepersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Morty Smith"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/image_view_characterdeatil"
        app:layout_constraintStart_toStartOf="@+id/image_view_characterdeatil"
        app:layout_constraintEnd_toEndOf="@id/image_view_characterdeatil"
        android:layout_marginVertical="@dimen/marginVertical_nameCharacter_characterDetail"
        android:textSize="@dimen/textSize_extraLarge"
        />

    <TextView
        android:id="@+id/textSpecies_characterDetail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_characterdeatil"
        android:text="@string/text_species_characterDetail_fragment"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/marginFirstVerticalElement_textCharacterDetail_fragment"
        android:layout_marginStart="80dp"/>

    <TextView
        android:id="@+id/textRace_characterDetail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_characterdeatil"
        tools:text="Human"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/marginFirstVerticalElement_textCharacterDetail_fragment"
        android:layout_marginEnd="80dp"
        />

    <TextView
        android:id="@+id/textStatus_characterDetail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textSpecies_characterDetail_fragment"
        android:text="@string/text_status_characterDetail_fragment"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="80dp"/>

    <TextView
        android:id="@+id/textAliveDeath_characterDetail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textRace_characterDetail_fragment"
        tools:text="Alive"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="80dp"
        />

    <TextView
        android:id="@+id/textGender_characterDetail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textStatus_characterDetail_fragment"
        android:text="@string/text_gender_characterDetail_fragment"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="80dp"/>

    <TextView
        android:id="@+id/textMaleFemale_characterDetail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAliveDeath_characterDetail_fragment"
        tools:text="Male"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="80dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>